// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  id          String    @id @default(cuid())
  publicId    String    @default(uuid())
  createdOn   String
  modifiedOn  String
  phoneNumber String
  email       String    @unique
  password    String
  fullName    String
  nickName    String
  avatar      String
  role        String
  identifyAs  String
  address     Address[]
}

model Address {
  id         Int     @id @default(autoincrement())
  createdOn  String
  modifiedOn String
  Address1   String
  Address2   String
  City       String
  State      String
  Country    String
  PostalCode String
  User       User?   @relation(fields: [userId], references: [id])
  userId     String?
}
